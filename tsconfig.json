{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@api/*": ["src/api/*"],
      "@hooks/*": ["src/hooks/*"],
      "@components/*": ["src/components/*"],
      "@ui/*": ["src/ui/*"],
      "@routes/*": ["src/routes/*"],
      "@screens/*": ["src/screens/*"],
      "@theme": ["src/ui/theme"],
      "@models/*": ["src/models/*"],
      "@mockData/*": ["src/mockData/*"],
      "@config/*": ["src/config/*"],
      "@contexts/*": ["src/contexts/*"]
    }
  },
  "include": ["src", "src/vite-env.d.ts"]
}

